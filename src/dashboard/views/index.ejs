<%- include('partials/head') %>
    <%- include('partials/header', { user }) %>
        <main>

            <%# ═══ PAGE: INDEX / HOME ═══ %>

                <!-- HERO SECTION -->
                <div class="hero animate-in">
                    <div class="hero-radar">
                        <div class="hero-radar-ring hero-radar-ring--outer"></div>
                        <div class="hero-radar-ring hero-radar-ring--mid"></div>
                        <div class="hero-radar-ring hero-radar-ring--inner"></div>
                        <div class="hero-crosshair-h"></div>
                        <div class="hero-crosshair-v"></div>
                        <div class="hero-center-icon">
                            <img src="/assets/img/swords.svg" alt="WTFR" class="icon-hero icon-neon glow">
                        </div>
                    </div>

                    <h1>WARBOT FR</h1>
                    <p class="subtitle">Centre de Commandement</p>

                    <div class="hero-actions">
                        <% if (!user) { %>
                            <a href="/auth/discord" class="btn btn-primary btn-lg">
                                <img src="/assets/img/discord.svg" alt="" class="icon icon-white">
                                Se connecter avec Discord
                            </a>
                            <% } else { %>
                                <a href="/dashboard" class="btn btn-neon btn-lg">
                                    <img src="/assets/img/arrow-right.svg" alt="" class="icon">
                                    Accéder au Dashboard
                                </a>
                                <% } %>
                    </div>
                </div>

                <div class="divider"></div>

                <!-- FEATURES GRID (using reusable partial) -->
                <div class="grid grid-3">
                    <%- include('partials/feature-card', { icon: 'radar' , color: 'neon' , delay: 1,
                        title: 'Logs & Intel' ,
                        desc: 'Surveillance en temps réel des messages supprimés, modifiés et des actions de modération.'
                        }) %>
                        <%- include('partials/feature-card', { icon: 'medal' , color: 'blurple' , delay: 2,
                            title: 'Auto-Rôles' ,
                            desc: 'Attribution automatique de rôles aux nouvelles recrues qui rejoignent le serveur.' })
                            %>
                            <%- include('partials/feature-card', { icon: 'ticket' , color: 'amber' , delay: 3,
                                title: 'Tickets' ,
                                desc: 'Système de tickets de support pour gérer les demandes et rapports des membres.'
                                }) %>
                </div>

                <!-- LIVE STATS BAR -->
                <div class="card animate-in delay-4">
                    <div class="stats-bar">
                        <div class="stat-item">
                            <img src="/assets/img/clock.svg" alt="" class="stat-icon icon-neon">
                            <div class="stat-value stat-value--neon" id="stat-uptime">
                                <%= stats.uptime %>
                            </div>
                            <div class="stat-label">Uptime</div>
                        </div>
                        <div class="stat-item">
                            <img src="/assets/img/castle.svg" alt="" class="stat-icon icon-blurple">
                            <div class="stat-value stat-value--blurple" id="stat-guilds">
                                <%= stats.guilds %>
                            </div>
                            <div class="stat-label">Serveurs</div>
                        </div>
                        <div class="stat-item">
                            <img src="/assets/img/shield.svg" alt="" class="stat-icon icon-amber">
                            <div class="stat-value stat-value--amber" id="stat-members">
                                <%= stats.members %>
                            </div>
                            <div class="stat-label">Membres</div>
                        </div>
                        <div class="stat-item">
                            <img src="/assets/img/commands.svg" alt="" class="stat-icon icon-neon">
                            <div class="stat-value stat-value--neon" id="stat-commands">
                                <%= stats.commands %>
                            </div>
                            <div class="stat-label">Commandes</div>
                        </div>
                    </div>
                </div>

        </main>
        <%- include('partials/footer') %>