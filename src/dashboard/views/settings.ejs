<div class="animate-in">
    <div class="settings-header">
        <div class="settings-guild-icon">
            <img src="/assets/img/castle.svg" alt="" class="icon icon-white">
        </div>
        <div>
            <h1 style="margin-bottom: 0; font-size: 1.8rem;">
                <%= guild.name %>
            </h1>
            <span class="badge badge-blurple" style="margin-top: 0.25rem;">ID: <%= guild.id %></span>
        </div>
    </div>
</div>

<div class="divider"></div>

<!-- SETTINGS FORM -->
<form action="/dashboard/<%= guild.id %>" method="POST">
    <div class="grid grid-2">

        <!-- LOGS -->
        <div class="card animate-in delay-1">
            <h2>
                <img src="/assets/img/radar.svg" alt="" class="icon icon-neon">
                Canal de Logs
            </h2>
            <div class="form-group" style="margin-bottom: 0;">
                <label class="form-label" for="logChannelId">Channel ID</label>
                <input type="text" id="logChannelId" name="logChannelId" class="form-input"
                    value="<%= config.logChannelId || '' %>" placeholder="Ex: 1234567890123456789">
                <div class="form-hint">ID du salon où envoyer les logs (messages supprimés, modifications, etc.)</div>
            </div>
        </div>

        <!-- WELCOME -->
        <div class="card animate-in delay-2">
            <h2>
                <img src="/assets/img/welcome.svg" alt="" class="icon icon-neon">
                Canal Bienvenue/Départ
            </h2>
            <div class="form-group" style="margin-bottom: 0;">
                <label class="form-label" for="welcomeChannelId">Channel ID</label>
                <input type="text" id="welcomeChannelId" name="welcomeChannelId" class="form-input"
                    value="<%= config.welcomeChannelId || '' %>" placeholder="Ex: 1234567890123456789">
                <div class="form-hint">ID du salon pour les images de bienvenue et messages de départ</div>
            </div>
        </div>

        <!-- AUTO-ROLE -->
        <div class="card animate-in delay-3">
            <h2>
                <img src="/assets/img/medal.svg" alt="" class="icon icon-neon">
                Auto-Rôle
            </h2>
            <div class="form-group" style="margin-bottom: 0;">
                <label class="form-label" for="autoRole">Role ID</label>
                <input type="text" id="autoRole" name="autoRole" class="form-input" value="<%= config.autoRole || '' %>"
                    placeholder="Ex: 1234567890123456789">
                <div class="form-hint">ID du rôle attribué automatiquement aux nouvelles recrues</div>
            </div>
        </div>

        <!-- TICKETS -->
        <div class="card animate-in delay-4">
            <h2>
                <img src="/assets/img/ticket.svg" alt="" class="icon icon-neon">
                Catégorie Tickets
            </h2>
            <div class="form-group" style="margin-bottom: 0;">
                <label class="form-label" for="ticketCategoryId">Category ID</label>
                <input type="text" id="ticketCategoryId" name="ticketCategoryId" class="form-input"
                    value="<%= config.ticketCategoryId || '' %>" placeholder="Ex: 1234567890123456789">
                <div class="form-hint">ID de la catégorie où créer les tickets de support</div>
            </div>
        </div>
    </div>

    <!-- ACTIONS -->
    <div class="settings-actions animate-in delay-4">
        <button type="submit" class="btn btn-neon btn-lg">
            <img src="/assets/img/save.svg" alt="" class="icon">
            Sauvegarder
        </button>
        <a href="/dashboard" class="btn btn-ghost">
            <img src="/assets/img/arrow-left.svg" alt="" class="icon icon-sm icon-muted">
            Retour
        </a>
    </div>
</form>