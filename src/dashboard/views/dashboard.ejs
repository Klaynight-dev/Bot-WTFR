<h1 class="animate-in">Tableau de Bord</h1>
<p class="animate-in delay-1" style="margin-bottom: 2rem;">Bienvenue, <strong style="color: var(--neon);">
        <%= user.username %>
    </strong> ‚Äî voici vos zones d'op√©ration.</p>

<!-- SERVER LIST -->
<div class="card animate-in delay-2">
    <h2>üè∞ Serveurs Configur√©s</h2>
    <p style="margin-bottom: 1rem;">Configurations actives du bot sur vos serveurs.</p>

    <% if (guildConfig && guildConfig.length> 0) { %>
        <div class="grid grid-2">
            <% guildConfig.forEach(function(config) { %>
                <div class="card" style="margin-bottom: 0;">
                    <div
                        style="display: flex; align-items: center; justify-content: space-between; margin-bottom: 0.75rem;">
                        <div style="display: flex; align-items: center; gap: 0.6rem;">
                            <div style="
                width: 40px; height: 40px; border-radius: 10px;
                background: linear-gradient(135deg, var(--blurple), #4752c4);
                display: flex; align-items: center; justify-content: center;
                font-size: 1.1rem;
              ">üè∞</div>
                            <div>
                                <div
                                    style="font-family: 'Rajdhani', sans-serif; font-weight: 600; font-size: 1rem; letter-spacing: 0.5px;">
                                    Serveur
                                </div>
                                <div style="font-size: 0.75rem; color: var(--text-muted); font-family: monospace;">
                                    ID: <%= config.id %>
                                </div>
                            </div>
                        </div>
                        <span class="badge badge-neon">Actif</span>
                    </div>

                    <div class="divider" style="margin: 0.75rem 0;"></div>

                    <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 0.5rem; font-size: 0.82rem;">
                        <div>
                            <span style="color: var(--text-muted);">Logs:</span>
                            <% if (config.logChannelId) { %>
                                <span class="status-dot status-online"></span>
                                <span style="color: var(--neon);">Actif</span>
                                <% } else { %>
                                    <span class="status-dot status-offline"></span>
                                    <span style="color: var(--text-muted);">Inactif</span>
                                    <% } %>
                        </div>
                        <div>
                            <span style="color: var(--text-muted);">Bienvenue:</span>
                            <% if (config.welcomeChannelId) { %>
                                <span class="status-dot status-online"></span>
                                <span style="color: var(--neon);">Actif</span>
                                <% } else { %>
                                    <span class="status-dot status-offline"></span>
                                    <span style="color: var(--text-muted);">Inactif</span>
                                    <% } %>
                        </div>
                        <div>
                            <span style="color: var(--text-muted);">Auto-r√¥le:</span>
                            <% if (config.autoRole) { %>
                                <span class="status-dot status-online"></span>
                                <span style="color: var(--neon);">Actif</span>
                                <% } else { %>
                                    <span class="status-dot status-offline"></span>
                                    <span style="color: var(--text-muted);">Inactif</span>
                                    <% } %>
                        </div>
                        <div>
                            <span style="color: var(--text-muted);">Tickets:</span>
                            <% if (config.ticketCategoryId) { %>
                                <span class="status-dot status-online"></span>
                                <span style="color: var(--neon);">Actif</span>
                                <% } else { %>
                                    <span class="status-dot status-offline"></span>
                                    <span style="color: var(--text-muted);">Inactif</span>
                                    <% } %>
                        </div>
                    </div>

                    <div style="margin-top: 1rem;">
                        <a href="/dashboard/<%= config.id %>" class="btn btn-ghost btn-sm"
                            style="width: 100%; justify-content: center;">
                            ‚öô Configurer
                        </a>
                    </div>
                </div>
                <% }); %>
        </div>
        <% } else { %>
            <div style="text-align: center; padding: 2rem 1rem;">
                <div style="font-size: 2.5rem; margin-bottom: 0.75rem; opacity: 0.4;">üì°</div>
                <p
                    style="font-family: 'Rajdhani', sans-serif; font-size: 1.1rem; color: var(--text-muted); letter-spacing: 1px; text-transform: uppercase;">
                    Aucune intel disponible
                </p>
                <p style="font-size: 0.85rem; color: var(--text-muted); margin-top: 0.5rem;">
                    Aucune configuration de serveur trouv√©e dans la base de donn√©es.
                </p>
            </div>
            <% } %>
</div>

<!-- STATS SECTION -->
<div class="card animate-in delay-3">
    <h2>üìä Statistiques</h2>
    <div style="text-align: center; padding: 1.5rem;">
        <div style="
      display: inline-flex; align-items: center; gap: 0.5rem;
      padding: 0.5rem 1.2rem; border-radius: 8px;
      background: var(--amber-glow); border: 1px solid rgba(240,160,48,0.2);
      color: var(--amber);
      font-family: 'Rajdhani', sans-serif;
      font-size: 0.9rem; font-weight: 600;
      letter-spacing: 1px; text-transform: uppercase;
    ">
            ‚è≥ En cours de d√©veloppement
