<%- include('partials/head') %>
    <%- include('partials/header', { user }) %>
        <main>

            <%# ═══ PAGE: DASHBOARD (Guild List) ═══ %>

                <h1 class="animate-in">Tableau de Bord</h1>
                <p class="animate-in delay-1" style="margin-bottom: 2rem;">
                    Bienvenue, <strong style="color: var(--neon);">
                        <%= user.username %>
                    </strong> — voici vos zones d'opération.
                </p>

                <!-- SERVER LIST -->
                <div class="card animate-in delay-2">
                    <h2>
                        <img src="/assets/img/castle.svg" alt="" class="icon icon-neon">
                        Serveurs Configurés
                    </h2>
                    <p style="margin-bottom: 1rem;">Configurations actives du bot sur vos serveurs.</p>

                    <% if (guilds && guilds.length> 0) { %>
                        <div class="grid grid-2">
                            <% guilds.forEach(function(guild) { %>
                                <%- include('partials/server-card', { guild }) %>
                                    <% }); %>
                        </div>
                        <% } else { %>
                            <div class="empty-state">
                                <div class="empty-state-icon">
                                    <img src="/assets/img/radar.svg" alt="" class="icon-xl icon-muted">
                                </div>
                                <p class="empty-state-title">Aucune intel disponible</p>
                                <p class="empty-state-desc">Aucune configuration de serveur trouvée dans la base de
                                    données.</p>
                            </div>
                            <% } %>
                </div>

                <!-- LIVE STATS SECTION -->
                <div class="card animate-in delay-3">
                    <h2>
                        <img src="/assets/img/chart.svg" alt="" class="icon icon-neon">
                        Statistiques en direct
                    </h2>
                    <div class="stats-bar" id="dashboard-stats">
                        <div class="stat-item">
                            <img src="/assets/img/clock.svg" alt="" class="stat-icon icon-neon">
                            <div class="stat-value stat-value--neon" id="live-uptime">—</div>
                            <div class="stat-label">Uptime</div>
                        </div>
                        <div class="stat-item">
                            <img src="/assets/img/castle.svg" alt="" class="stat-icon icon-blurple">
                            <div class="stat-value stat-value--blurple" id="live-guilds">—</div>
                            <div class="stat-label">Serveurs</div>
                        </div>
                        <div class="stat-item">
                            <img src="/assets/img/shield.svg" alt="" class="stat-icon icon-amber">
                            <div class="stat-value stat-value--amber" id="live-members">—</div>
                            <div class="stat-label">Membres</div>
                        </div>
                        <div class="stat-item">
                            <img src="/assets/img/commands.svg" alt="" class="stat-icon icon-neon">
                            <div class="stat-value stat-value--neon" id="live-commands">—</div>
                            <div class="stat-label">Commandes</div>
                        </div>
                    </div>
                </div>

        </main>
        <%- include('partials/footer') %>