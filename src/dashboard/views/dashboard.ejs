<h1>Tableau de bord</h1>

<div class="card">
    <h2>Vos Serveurs</h2>
    <p>Liste des configurations (Admin seulement pour l'instant).</p>
    <% if (guildConfig && guildConfig.length> 0) { %>
        <ul>
            <% guildConfig.forEach(function(config) { %>
                <li>ID Serveur: <%= config.id %> (Log: <%= config.logChannelId || 'Aucun' %>)</li>
                <% }); %>
        </ul>
        <% } else { %>
            <p>Aucune configuration trouvée.</p>
            <% } %>
</div>

<div class="card">
    <h2>Statistiques</h2>
    <p>Bientôt disponible...</p>
</div>