{
  "name": "wtfr-bot",
  "version": "1.5.3",
  "description": "Bot pseudo WTFR",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "deploy": "pnpm run build && node dist/deploy-commands.js",
    "deploy:guild": "DEPLOY_SCOPE=guild pnpm run deploy",
    "deploy:global": "DEPLOY_SCOPE=global pnpm run deploy",
    "go": "pnpm run build && pnpm run start",
    "postinstall": "prisma generate",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev --name init",
    "prisma:dbpush": "prisma db push"
  },
  "dependencies": {
    "@prisma/adapter-pg": "^7.4.1",
    "@prisma/client": "^7.4.1",
    "discord.js": "^13.17.1",
    "dotenv": "^16.4.5",
    "pnpm": "^10.30.0"
  },
  "devDependencies": {
    "@types/node": "^20.4.2",
    "prisma": "^6.19.2",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.5.6"
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  }
}
