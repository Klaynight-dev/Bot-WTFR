{
  "name": "wtfr-bot",
  "version": "1.0.0",
  "description": "Bot pseudo WTFR",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "deploy": "pnpm run build && node dist/deploy-commands.js",
    "go": "pnpm run build && pnpm run start",
    "postinstall": "prisma generate",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev --name init",
    "prisma:dbpush": "prisma db push",
    "seed": "ts-node prisma/seed.ts"
  },
  "dependencies": {
    "discord.js": "^14.14.1",
    "dotenv": "^16.4.5",
    "@prisma/client": "^7.4.1"
  },
  "devDependencies": {
    "typescript": "^5.5.6",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "@types/node": "^20.4.2",
    "prisma": "^7.4.1"
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  }
}
